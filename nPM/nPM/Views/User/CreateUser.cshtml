@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


@model Models.User

<input type="hidden" value="User" id="hdEntity" />
<input type="hidden" value="Create" id="hdPage" />

<div id="dvSectionRight">

    <form id="frmCreateUser" method="post" action="/User/CreateUser">
     
        <div id="dvGeneralInfo" class="dv_entity_form" >   
                
            <h2 id="h2GM" class="h2_tab_title">Complete User Form</h2>
                        
            <table id="tblCreateUser" class="tbl_entity_table">
                <tr>
                    <td>
                        <br />
                        @Html.DisplayNameFor(m => m.FirstName):
                        <br />
                        @Html.TextBoxFor(m => m.FirstName, htmlAttributes: new { @class = "txt_input_visible" })
                    </td>
                    <td>
                        <br />
                        @Html.DisplayNameFor(m => m.LastName):
                        <br />
                        @Html.TextBoxFor(m => m.LastName, htmlAttributes: new { @class = "txt_input_visible" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <br />
                        @Html.DisplayNameFor(m => m.IdNumber):
                        <br />
                        @Html.TextBoxFor(m => m.IdNumber, htmlAttributes: new { @class = "txt_input_visible" })
                    </td>
                    <td>
                        <br />
                        @Html.DisplayNameFor(m => m.PassportNumber):
                        <br />
                        @Html.TextBoxFor(m => m.PassportNumber, htmlAttributes: new { @class = "txt_input_visible" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <br />
                        @Html.DisplayNameFor(m => m.Email):
                        <br />
                        @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "txt_input_visible" })
                    </td>
                    <td>
                        @Html.DisplayNameFor(m => m.PhoneNumber):
                        <br />
                        @Html.TextBoxFor(m => m.PhoneNumber, htmlAttributes: new { @class = "txt_input_visible" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <br />
                        @Html.DisplayNameFor(m => m.CellNumber):
                        <br />
                        @Html.TextBoxFor(m => m.CellNumber, htmlAttributes: new { @class = "txt_input_visible" })
                    </td>
                    <td>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <br />
                       @* @Html.DisplayNameFor(m => m.ad):
                        <br />
                        @Html.TextAreaFor(m => m.AddressPrimary, htmlAttributes: new { @class = "txtarea_input_visible" })*@
                    </td>
                </tr>
                <tr>
                    <td>
                        <br />
                        @Html.DisplayNameFor(m => m.UserName):
                        <br />
                        @Html.TextBoxFor(m => m.UserName, htmlAttributes: new { @class = "txt_input_visible" })
                        <script>
                            $.ajax({
                                type: "get",
                                url: "/User/generateUsername",
                                success: function (data) {
                                    $('#UserName').val(data.success);
                                },
                                error: function (XMLHttpRequest, textStatus, errorThrown) {
                                    error_handlerXML('Error occured while open SR', XMLHttpRequest);
                                }
                            });
                        </script>
                    </td>
                </tr>
            </table>   
            
            <br />

        </div>

    </form>

</div>
